<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagementSystem.MainPage">
    <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">
        <Label 
            Text="Gym Management System"
            FontSize="28"
            HorizontalOptions="Center" />

        <Button 
            Text="Manage Members"
            Clicked="OnManageMembersClicked" />

        <Button 
            Text="Track Subscriptions"
            Clicked="OnTrackSubscriptionsClicked" />

        <Button 
            Text="Record Attendance"
            Clicked="OnRecordAttendanceClicked" />

        <Button 
            Text="Manage Schedules"
            Clicked="OnManageSchedulesClicked" />
    </VerticalStackLayout>
</ContentPage>

