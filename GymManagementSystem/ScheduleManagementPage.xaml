<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagementSystem.ScheduleManagementPage">
    <VerticalStackLayout Spacing="15" Padding="15">
        <Label Text="Manage Schedules" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Enter Schedule Details" x:Name="ScheduleInput" />
        <Button Text="Add Schedule" Clicked="OnAddScheduleClicked" />

        <ListView x:Name="ScheduleList" />
    </VerticalStackLayout>
</ContentPage>
