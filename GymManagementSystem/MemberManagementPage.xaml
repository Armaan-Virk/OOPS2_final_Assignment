<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagementSystem.MemberManagementPage">
    <VerticalStackLayout Spacing="15" Padding="15">
        <Label Text="Manage Members" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Enter Member Name" x:Name="MemberNameInput" />
        <Entry Placeholder="Enter Member ID" x:Name="MemberIDInput" />

        <Button Text="Add Member" Clicked="OnAddMemberClicked" />

        <ListView x:Name="MemberList" />
    </VerticalStackLayout>
</ContentPage>
